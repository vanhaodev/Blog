<div class="mt-4">
    <form method="get">
        <div class="form-group">
            <label for="exampleInputEmail1" class="form-label">Từ khóa</label>
            <input type="text" name="q" class="form-control" id="search-input" placeholder="Nhập từ khóa..."></input>

        </div>

        <div class="form-group">
            <label for="exampleInputEmail1" class="form-label">Từ khóa</label>
            <select name="gender" class="form-control" id="gender-input">
                <option value="">--Chọn--</option>
                <option value="male">Nam</option>
                <option value="female">Nữ</option>
            </select>

        </div>

        <button type="submit" class="btn btn-primary">Tìm kiếm</button>
    </form>

    {{#if search}}
    <span>Bạn đang tìm kiếm: {{search}}</span>
    {{else}}
    <span>Hãy tìm kiếm thứ gì đó đi nào!</span>
    {{/if}}

</div>